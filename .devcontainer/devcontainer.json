{
    "name": "Aicomp POC Playground",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "VARIANT": "18"
        },
        "options": [
          "--shm-size=4g"
        ]
    },
    "customizations": {
        "vscode": {
            "extensions": [
                  "sapse.vscode-cds",
                  "dbaeumer.vscode-eslint",
                  "humao.rest-client",
                  "qwtel.sqlite-viewer",
                  "mechatroner.rainbow-csv",
                  "ms-azuretools.vscode-docker",
                  "esbenp.prettier-vscode",
                  "eamodio.gitlens",
                  "github.copilot",
                  "github.vscode-pull-request-github",
                  "github.copilot-chat",
                  "SAPSE.sap-ux-application-modeler-extension",
                  "SAPSE.sap-ux-service-modeler-extension",
                  "SAPSE.sap-ux-help-extension",
                  "SAPSE.sap-ux-fiori-tools-extension-pack",
                  "SAPSE.sap-ux-annotation-modeler-extension",
                  "SAPOSS.vscode-ui5-language-assistant",
                  "redhat.vscode-xml",
                  "bierner.markdown-mermaid",
                  "gruntfuggly.todo-tree"
              ]
        }
    },
    "forwardPorts": [
        4004
    ],
    "remoteUser": "node"
  }